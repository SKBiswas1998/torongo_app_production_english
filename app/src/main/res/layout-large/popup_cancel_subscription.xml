<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/popupunsyb">
    <TextView
        android:id="@+id/txt_unscribHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unsubscribe"
        android:textSize="@dimen/text_large"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/txt_unscribSubHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_sub"
        android:textSize="@dimen/text_large"
        android:textStyle="bold"
        android:textColor="@color/cardview_dark_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        />
    <TextView
        android:id="@+id/txt_unscribContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancelsubscription"
        android:textSize="@dimen/text_medium"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/cardview_dark_background"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_unscribSubHead"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
    <TextView
        android:id="@+id/img_unsubscribe_notNow"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_below="@+id/txt_unscribContent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/bct_open_bg"
        android:textColor="@color/white"
        android:text="@string/not_now"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textSize="@dimen/text_medium" />

    <TextView
        android:id="@+id/img_unsubscribe_Continue"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_below="@+id/txt_unscribContent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bct_open_bg"
        android:textColor="@color/white"
        android:text="@string/conti"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textSize="@dimen/text_medium" />
    </RelativeLayout>
</LinearLayout>