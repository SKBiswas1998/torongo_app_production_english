<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_book_card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/layout_medium_margin"
    android:layout_marginBottom="@dimen/layout_medium_margin"
    android:gravity="center"
    android:keepScreenOn="true"
    android:nestedScrollingEnabled="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgBookCoverFavoraites"
        android:layout_width="@dimen/size_avatar_toolbar"
        android:layout_height="@dimen/size_avatar_toolbar"
        android:layout_marginLeft="@dimen/fav_icon_margin_left"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/imgBookCover"
        android:background="@drawable/favorite_unselected"
        android:elevation="6dp" />

    <ImageView
        android:id="@+id/imgBookCover"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"/>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/imgBookCover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp">

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bct_get_bg"
            android:gravity="center"
            android:text="@string/get"

            android:textColor="#D50B0B"
            android:textSize="@dimen/text_large" />

        <ProgressBar
            android:id="@+id/progress_DownloadBook"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:maxHeight="50dip"
            android:minHeight="50dip"
            android:progressDrawable="@drawable/fake_progress_bar"
            android:visibility="gone"
            android:progress="0"
            android:max="100"/>

    </RelativeLayout>

</RelativeLayout>