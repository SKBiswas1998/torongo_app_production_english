<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootcontent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".Activity.PageActivity">

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/page_view_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/tempText"
        android:textColor="#444"
        android:elevation="3dp"
        android:textSize="@dimen/text_medium"
        android:lineSpacingExtra="0.5dp"
        android:layout_alignParentTop="true"
        app:reflectionColor="#f00" />

    <ImageView
        android:id="@+id/img_pageImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/pageimage14" />

    <LinearLayout
        android:id="@+id/layoutanimation"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:elevation="3dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/page_view_backbtn"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="1dp"
            android:background="@drawable/reghtnext" />

        <Button
            android:id="@+id/page_view_palybtn"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="1dp"
            android:background="@drawable/playnew" />

        <Button
            android:id="@+id/page_view_nextbtn"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="1dp"
            android:background="@drawable/nextleft" />

        <Button
            android:id="@+id/page_view_startover"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="1dp"
            android:background="@drawable/startoverbutton" />

        <Button
            android:id="@+id/page_view_share"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="1dp"
            android:background="@drawable/newsharebutton" />

        <Button
            android:id="@+id/home_page"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="1dp"
            android:background="@drawable/homepage" />
    </LinearLayout>
</RelativeLayout>