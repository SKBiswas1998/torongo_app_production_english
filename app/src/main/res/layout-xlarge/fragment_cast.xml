<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:keepScreenOn="true"
    tools:context=".Fragment.CastFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyc_Cast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/castheaderbg" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyc_Cast"
        android:alpha="0.5"
        android:background="@drawable/green_shadow1"
        android:elevation="2dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyc_CastList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/castbg"
        android:layout_below="@+id/recyc_Cast"
        />
</RelativeLayout>