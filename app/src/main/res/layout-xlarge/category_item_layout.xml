<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/img_cast"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:keepScreenOn="true"
    android:layout_margin="5dp">
    <ImageView
        android:id="@+id/img_catergory"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
    <TextView
        android:id="@+id/txt_categoryName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="New Book"
        android:textSize="@dimen/text_medium"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="2dp"
        android:layout_marginRight="@dimen/medium_padding"
        android:layout_marginEnd="@dimen/medium_padding"
        android:layout_marginLeft="@dimen/medium_padding"
        android:layout_marginStart="@dimen/medium_padding"
        android:layout_below="@+id/img_catergory"
        android:background="@drawable/bg_cat_selected_name"
        android:textColor="@color/white"
        android:fontFamily="@font/englisharial"
        android:textStyle="bold"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="3dp"/>
</RelativeLayout>
