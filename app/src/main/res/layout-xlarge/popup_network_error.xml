<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:keepScreenOn="true"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/erroralert">

        <TextView
            android:id="@+id/txt_popNetworkError"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="@string/networklabel"
            android:textColor="@color/moonalert"
            android:textSize="@dimen/text_very_large"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_popCancel"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:layout_below="@+id/txt_popNetworkError"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="60dp"
            android:src="@drawable/cancel" />


        <ImageView
            android:id="@+id/img_popRetry"
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_below="@+id/txt_popNetworkError"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/img_popCancel"
            android:src="@drawable/retry" />

        <ImageView
            android:id="@+id/img_popRetryForFTUE"
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_below="@+id/txt_popNetworkError"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:src="@drawable/retry" />
    </RelativeLayout>
</LinearLayout>